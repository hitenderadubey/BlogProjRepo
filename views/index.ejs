<div class="author">
    <h1 class="author__heading">Hitendera Dubey</h1>
    <p class="author__body">CEO and Managing Director for Innovation</h1>
</div>

<img src="/img/success.jpeg" alt="Success person" class="hero-image" width = "981" height="528">

<section>
    <h2 class = "articles_heading">Latest posts</h2>

    <ul class="article-ul">

        <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class = "article-list__date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page= <%= nextPage %>" class = "pagination">&lt; View Older Posts</a>
    <% } %>
    
</section>